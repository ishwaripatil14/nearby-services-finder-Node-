{
  "info": {
    "name": "Nearby Services Finder",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin1234\"\n}"
        }
      }
    },
    {
      "name": "Public - List Services",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/services",
          "host": ["{{baseUrl}}"],
          "path": ["services"]
        }
      }
    },
    {
      "name": "Public - Nearby Services",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/services/nearby?lat=18.5204&lng=73.8567&radius=5",
          "host": ["{{baseUrl}}"],
          "path": ["services", "nearby"],
          "query": [
            { "key": "lat", "value": "18.5204" },
            { "key": "lng", "value": "73.8567" },
            { "key": "radius", "value": "5" }
          ]
        }
      }
    },
    {
      "name": "Public - Filter by Category",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/services?category=hospital",
          "host": ["{{baseUrl}}"],
          "path": ["services"],
          "query": [{ "key": "category", "value": "hospital" }]
        }
      }
    },
    {
      "name": "Admin - List Services",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/admin/services",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "services"]
        }
      }
    },
    {
      "name": "Admin - Create Service",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/services",
          "host": ["{{baseUrl}}"],
          "path": ["services"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Clinic\",\n  \"category\": \"hospital\",\n  \"rating\": 4.1,\n  \"lat\": 18.5204,\n  \"lng\": 73.8567\n}"
        }
      }
    },
    {
      "name": "Admin - Update Service",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/services/{{serviceId}}",
          "host": ["{{baseUrl}}"],
          "path": ["services", "{{serviceId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Name\",\n  \"rating\": 4.6\n}"
        }
      }
    },
    {
      "name": "Admin - Delete Service",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/services/{{serviceId}}",
          "host": ["{{baseUrl}}"],
          "path": ["services", "{{serviceId}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "serviceId", "value": "" }
  ]
}
